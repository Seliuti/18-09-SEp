<Layout>
  <div class="relative min-h-screen bg-white text-gray-900">
    <!-- Notification Bar -->
    <div class="bg-blue-600 text-white p-2 text-center text-sm font-semibold">
    </div>
    
    <!-- App Bar (Navbar) -->
    <header class="fixed top-0 left-0 right-0 bg-black p-4 shadow-md z-50 text-white">
      <div class="container mx-auto flex justify-between items-center">
        <!-- Left side placeholder (for alignment) -->
        <div class="flex-grow"></div>
        
        <!-- Logo in the center -->
        <a href="/" class="mx-auto">
          <img src="https://static.wikia.nocookie.net/logopedia/images/a/a1/Blox_Fruits.png/revision/latest/scale-to-width-down/1000?cb=20220326205603" 
               alt="Blox Fruits Logo" class="h-16 w-auto mx-auto" />
        </a>
        
        <!-- Right side (OTHERS button) -->
        <a href="/others-page" class="text-lg font-semibold bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded">
          OTHERS
        </a>
      </div>
    </header>
    
    <!-- Main Content -->
    <main class="pt-16 px-4">
